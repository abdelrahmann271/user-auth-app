# ===========================================
# Production Environment - TEMPLATE
# ===========================================
# Copy to .env.production and fill in real values

# MongoDB Credentials (REQUIRED - use strong password!)
# Generate password with: openssl rand -base64 32
MONGO_USERNAME=easygen
MONGO_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# JWT Configuration (REQUIRED)
# Generate secret with: openssl rand -base64 64
JWT_SECRET=REPLACE_WITH_SECURE_SECRET
JWT_EXPIRES_IN=1800

# Backend
BACKEND_PORT=3001
NODE_ENV=production

# Frontend
VITE_API_URL=/api

# CORS (your production domain)
FRONTEND_URL=https://yourdomain.com

# Disable Swagger in production
ENABLE_SWAGGER=false
